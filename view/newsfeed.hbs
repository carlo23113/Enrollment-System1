<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="/css/index.css" />
    <link href="https://fonts.googleapis.com/css2?family=Kumbh+Sans&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
        integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous" />
    <script src="https://kit.fontawesome.com/b99e675b6e.js"></script>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
</head>

<body style="background-color: rgb(255, 235, 235);">
    <div id="side_nav">
        <nav class="navbar">
            <div id="hamburger">
                <li>
                    <a>
                        <i class="fas fa-user"></i>
                        <span class="link-text">{{#each results}} {{firstname}}{{/each}}</span>
                    </a>
                </li>
            </div>

            <ul class="navbar-nav">
                <li class="nav-item">
                    <a href=" /home" class="active"><i class="fas fa-home"></i>
                        <span class="link-text">Home</span></a>
                </li>
                <li class="nav-item">
                    <a href=" /newsfeedpage" class="active"> <i class="fas fa-comment-alt"></i></i>
                        <span class="link-text">News Feed</span></a>
                </li>
                <li class="nav-item">
                    <a class="maintenance"><i class="fas fa-wrench"></i>
                        <span class="link-text">Maintenance</span></a>
                    <div class="sub-menu">
                        <a href="/courses-maintenance"><i class="fas fa-chevron-right"></i></i><span>Courses</span></a>

                        <a href="/sections-maintenance"><br><i
                                class="fas fa-chevron-right"></i><span>Sections</span></a>
                    </div>
                </li>
                <li class="nav-item">
                    <a href="/viewStudents"><i class="fas fa-user-friends"></i>
                        <span class="link-text">Students</span></a>
                </li>
                <li class="nav-item">
                    <a href="/logout"><i class="fas fa-sign-out-alt"></i>
                        <span class="link-text">Log Out</span></a>
                </li>
            </ul>
        </nav>
    </div>
    <div class="top-nav">
        <div class="logo"><img src="/images/logo.png" alt="" /></div>
    </div>
    <div class="newsfeed">
        <h1 style="text-align: center;margin-top: 20px">News Feed</h1>
        <div class="header">
            <form action="/newsfeed" method="POST">
                <div class="input-group mb-3">
                    <input type="hidden" class="form-control"
                        value="{{#each results}} {{firstname}} {{lastname}}{{/each}}" name="fullname">
                    <input style="border-radius: 50px;margin-right:5px" type="text" class="form-control"
                        placeholder="What's on your mind, {{#each results}} {{firstname}}{{/each}}?" name="newsfeed">
                    <div class="input-group-append">
                        <button style="border-radius: 50px;" type="submit" class="btn btn-danger" type="button"
                            id="button-addon2">Post</button>
                    </div>
                </div>
            </form>
        </div>
        {{#each posts}}
        <div class="post" id="Post">
            <h5><i class="fas fa-user-circle"></i>{{fullname}}
            </h5>
            <p>{{post}}</p>
        </div>
        {{/each}}
    </div>

    <button onclick="topFunction()" id="myBtn"><i style="width: 50px;color:maroon;font-size: 80px;"
            class="far fa-arrow-alt-circle-up"></i></button>

    <script>
        //Get the button
        var mybutton = document.getElementById("myBtn");

        // When the user scrolls down 20px from the top of the document, show the button
        window.onscroll = function () { scrollFunction() };

        function scrollFunction() {
            if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
                mybutton.style.display = "block";
            } else {
                mybutton.style.display = "none";
            }
        }

        // When the user clicks on the button, scroll to the top of the document
        function topFunction() {
            document.body.scrollTop = 0;
            document.documentElement.scrollTop = 0;
        }
    </script>
</body>

</html>